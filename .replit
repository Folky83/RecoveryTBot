
modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "python3 run.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Campaign Monitor"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Campaign Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python campaign_monitor.py --check-interval 60"

[[ports]]
localPort = 5000
externalPort = 80
